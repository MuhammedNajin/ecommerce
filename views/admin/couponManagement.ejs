            console.log(status, 'hii');

            if (status) {
                console.log('unbock')
                stat = 'Unblock';
                console.log(stat + "111");
            } else {
                console.log('block')
                stat = 'block'
                console.log(stat + " 00000");
            }
        })

        Swal.fire({
            title: 'Are you sure',
            text: `do you want to ${stat} this user!`,
            icon: 'warning',
            showCancelButton: true,
