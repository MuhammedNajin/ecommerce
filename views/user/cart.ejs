                                                    <input type="text" id="ctn" value="<%= item.quantity%>" data-productId="<%= item.productId._id%>" data-size="<%= item.size%>" data-index="<%= item.product%>">
                                                    <span  id="plus" class="fa fa-angle-right  counter"></span>
                                                </div>
                                            </div>
                                        </td>
                                        <%total += (item.productId.variant[item.product].price * item.quantity)%>
                                        <% items += item.quantity%>
                                        <%totalAmount += item.totalPrice%>
                                        <td class="cart__price">₹<%= item.totalPrice%></td>
                                       
                                        <td class="cart__close" onclick="remove_from_cart('<%= item.productId._id%>','<%= item.product%>')"><i class="fa fa-close"></i></td>
